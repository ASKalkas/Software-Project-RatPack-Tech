<!DOCTYPE html>
<html>
  <head>
    <head>
      <link rel='stylesheet' href='/styles/bootstrap.min.css' />
      <link rel='stylesheet' href='/styles/style.css' />
      <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    </head>
  </head>
<body>
<script>
$(document).ready(function(){    
    $("#simulateRide").click(function() {
      const origin =  $('#origin').val();
      const destination= $('#destination').val();
      const tripDate= $('#tripDate').val();
      
      const data = {
        origin,
        destination,
        tripDate,
      };
      console.log("h");
      $.ajax({
        type: "PUT",
        url: `/api/v1/ride/simulate`,
        data,
        success: function(serverResponse) {
          if(serverResponse) {
            alert(`Ride Simulated Successfully`);
          }
        },
        error: function(errorResponse) {
          if(errorResponse) {
            alert(`Couldnt Simulate Ride: ${errorResponse.responseText}`);
          }            
        }
      });
    });      
  });
</script>
<div>
    <nav class="navbar navbar-inverse" style="padding-left:130px;">
      <ul class="nav navbar-nav">
        <li><a href="/dashboard">Home</a></li>
        <li><a href="/">Logout</a></li>  
      </ul>
  </nav>
<div class="center">
    <h1>Check Price</h1>
    </div>
    <div style="padding-left: 500px">
    <form class="form-horizontal" style="width: 50%;">
      <div class="form-group">
        <label for="origin" class="col-sm-2 control-label">Start Station</label>
        <div class="col-sm-10">
              <input type="text" class="form-control" id="origin" name="origin" placeholder="Origin Station" value="">
        </div>
      </div>
      <div class="form-group">
        <label for="destination" class="col-sm-2 control-label">End Station</label>
        <div class="col-sm-10">
              <input type="text" class="form-control" id="destination" name="destination" placeholder="Destination Station" value="">
        </div>
      </div>
      <div class="form-group">
        <label for="tripDate" class="col-sm-2 control-label">Trip Date</label>
        <div class="col-sm-10">
              <input type="text" class="form-control" id="tripDate" name="tripDate" placeholder="Trip Date" value="">
        </div>
      </div>
      <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
              <input id="simulateRide" name="simulateRide" type="button" value="Simulate Ride" class="btn btn-primary">
          </div>
      </div>
    </form>
</body>
</html>