<!DOCTYPE html>
<html>
  <head>
    <head>
      <link rel='stylesheet' href='/styles/bootstrap.min.css' />
      <link rel='stylesheet' href='/styles/style.css' />
      <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    </head>
  </head>
<body>
<script>
$(document).ready(function(){    
    $("#checkPrice").click(function() {
      const originId =  $('#originId').val();
      const destinationId= $('#destinationId').val();
      
      const data = {
        originId,
        destinationId,
      };
      
      $.ajax({
        type: "GET",
        url: `api/v1/tickets/price?originId=${originId}&destinationId=${destinationId}`,
        success: function(serverResponse) {
          if(serverResponse) {
            alert(`Here is The Price: ${serverResponse}`);
          }
        },
        error: function(errorResponse) {
          if(errorResponse) {
            alert(`Couldnt Get Price: ${errorResponse.responseText}`);
          }            
        }
      });
    });      
  });
</script>
<div>
    <nav class="navbar navbar-inverse" style="padding-left:130px;">
      <ul class="nav navbar-nav">
        <li><a href="/dashboard">Home</a></li>
        <li><a href="/">Logout</a></li>  
      </ul>
  </nav>
<div class="center">
    <h1>Check Price</h1>
    </div>
    <div style="padding-left: 500px">
    <form class="form-horizontal" style="width: 50%;">
      <div class="form-group">
        <label for="originId" class="col-sm-2 control-label">Start Station</label>
        <div class="col-sm-10">
              <input type="text" class="form-control" id="originId" name="originId" placeholder="StationName" value="">
        </div>
      </div>
      <div class="form-group">
        <label for="originId" class="col-sm-2 control-label">End Station</label>
        <div class="col-sm-10">
              <input type="text" class="form-control" id="destinationId" name="destinationId" placeholder="StationName" value="">
        </div>
      </div>
      <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
              <input id="checkPrice" name="checkPrice" type="button" value="Check Price" class="btn btn-primary">
          </div>
      </div>
    </form>
</body>
</html>