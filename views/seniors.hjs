<!DOCTYPE html>
<html>
  <head>
    <head>
      <link rel='stylesheet' href='/styles/bootstrap.min.css' />
      <link rel='stylesheet' href='/styles/style.css' />
      <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    </head>
  </head>
  <body>
    <script>
              $(document).ready(function(){    
             $("#update").click(function() {
              const reqid = $('#reqid').val();
              const seniorStaus = $('#status').val();
              const data = {
                seniorStaus,
              };
              $.ajax({
                type: "PUT",
                url: `/api/v1/requests/senior/${reqid}`,
                data,
                success: function(serverResponse) {
                  if(serverResponse) {
                    alert('updated');
                    location.href = '/manage/requests/seniors';
                  }
                },
                error: function(errorResponse) {
                  if(errorResponse) {
                    alert(`Error Cannot update status: ${errorResponse.responseText}`);
                  }
                }
              });
             
            });    
             
            

    }); 
    </script>
     <nav class="navbar navbar-inverse" style="padding-left:130px;">
      <ul class="nav navbar-nav">
        <li><a href="/dashboard">Home</a></li>
        <li><a href="/users">Users</a></li>
        <li><a href="/users/add">Add Users</a></li>
         <li class="active"><a href="/manage">manage</a></li>
        <li><a href="/">Logout</a></li>       
      </ul>
  </nav>

    <div class="center">
    <h1>seniors</h1>
    <table id="senior-table" class="table">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">status</th>
            <th scope="col">userid</th>
            <th scope="col">nationalid</th>
            



          </tr>
          {{#seniors}}
            <tr>
              
              <td>{{id}}</td>
              <td>{{status}}</td>
              <td>{{userid}}</td>
              <td>{{nationalid}}</td>
              
              
            </tr> 
          {{/seniors}}
        </thead>
        
      </table>
    </div>
     <div style="padding-left: 500px">
    <form class="form-horizontal" style="width: 50%;">
      <div class="form-group">
          <label for="reqid" class="col-sm-2 control-label">reqid</label>
          <div class="col-sm-10">
              <input type="number" class="form-control" id="reqid" name="reqid" placeholder="reqid" value="">
          </div>
      </div>
       <div class="form-group">
          <label for="status" class="col-sm-2 control-label">status</label>
          <div class="col-sm-10">
              <input type="text" class="form-control" id="status" name="status" placeholder="status" value="">
          </div>
      </div>
      <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
              <input id="update" name="update" type="button" value="update" class="btn btn-primary">
          </div>
      </div>
        </form>
    </div>
  </body>
</html>